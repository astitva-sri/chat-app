<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:padding="12dp"
    android:background="@color/primaryAppBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="@dimen/_12sdp">
        <TextView
            android:id="@+id/settingTittle"
            style="@style/TextAppearance.Material3.HeadlineLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:fontFamily="@font/poppins_bold"
            android:text="Settings"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/_42sdp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:textColor="@color/black"
            android:background="?android:attr/listDivider"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userSettingProfile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:src="@drawable/ic_add_profile_2"
            app:civ_border_color="@color/black"
            app:civ_border_width="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_18sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Update your profile image"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:fontFamily="@font/spartan_bold"
            android:text="User's Profile Detail"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/settingUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="User Name"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/settingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:ems="10"
            android:hint="User status"
            android:inputType="textPersonName"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save the Change(s)"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_12sdp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>